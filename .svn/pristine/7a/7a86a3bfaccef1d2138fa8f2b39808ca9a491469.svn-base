@CHARSET "ISO-8859-1";

* {
	margin: 0px;
	padding: 0px;	
}

html {
	width: 100%;
	height: 100%;
} 

body {
	width: 80%;
	margin: auto;

	color: #DDDDCE;
	min-height:40em;
	/* ..-> goes to parent directory before going into imgs directory*/
	background-image: url('../imgs/wallpaper-space.jpg');
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: cover;
	font-family: 'Trebuchet MS', Helvetica, sans-serif;
}

h1, h2, h3, h4, h5, h6 {
	margin-left:0.25em;
	margin-right:0.25em;
	margin-top:0.25em;
	margin-bottom:0.25em;
	padding-left:0em;
	padding-right:0em;
	padding-top:0em;
	padding-bottom:0em;
}

div, header, footer, nav, article, aside, section, figure {
	margin-left:0em;
	margin-right:0em;
	margin-top:0.25em;
	margin-bottom:0.25em;
	padding-left:0em;
	padding-right:0em;
	padding-top:0em;
	padding-bottom:0em;
	background-image: url('../imgs/div_bg.png');
}

p {
	margin-top: 1em;
	margin-bottom: 1em;
}

a {
	color: #DDDDCE;
}

a:hover {
	color: gray;
}

footer {
	width: 100%;
	text-align:center;
	clear:both;
	padding-bottom:0.25em;
	padding-top:0.25em;
}

header {
	width: 100%;
	clear:both;
	padding-bottom:0.25em;
	padding-top:0.25em;
}

#wrapper {
	background-color: #222;
	opacity: .9;
	filter:Alpha(opacity=90); /*Opacity for IE*/
	margin-left: auto;
	margin-right: auto;
	padding-left: 1em;
	padding-right: 1em;
	min-width:46em;
	width: 75%;
	min-height: 25em;
}

#logout {
	text-align:right;
}

#logout-btn {
	width:6em;
	height:2em;
	margin-top:0.25em;
	margin-bottom:0.25em;
}

.form-box-wrapper {
	width:auto;
	height: 20em;
}

.form-box {
	width:14em;
	height:5em;
	margin-right: auto;
	margin-left: auto;
	position:relative;
	top:5em;
}

.form-btn {
	margin-top:2em;
	width:50%;
	height:2em;
}

.form-btn-wrapper {
	text-align: center;
}

.error {
	color: red;
	font-weight: bold;
	font-size: 1.25em;
}

.indent1 {
	padding-left: 1em;
}

.list-no-bullets {
	list-style-type: none;
}
