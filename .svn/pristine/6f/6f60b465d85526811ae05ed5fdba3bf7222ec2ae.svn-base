@CHARSET "ISO-8859-1";

* {
	margin: 0px;
	padding: 0px;	
}

html {
	width: 100%;
	height: 100%;
} 

body {
	width: 80%;
	margin: auto;

	color: #DDDDCE;
	min-height:40em;
	/* ..-> goes to parent directory before going into imgs directory*/
	background-image: url('../imgs/wallpaper-space.jpg');
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: cover;
	font-family: 'Trebuchet MS', Helvetica, sans-serif;
}

h1, h2, h3, h4, h5, h6 {
	margin-left:0.25em;
	margin-right:0.25em;
	margin-top:0.25em;
	margin-bottom:0.25em;
	padding-left:0em;
	padding-right:0em;
	padding-top:0em;
	padding-bottom:0em;
}

div, header, footer, nav, article, aside, section, figure {
	margin-left:0em;
	margin-right:0em;
	margin-top:0.25em;
	margin-bottom:0.25em;
	padding-left:0em;
	padding-right:0em;
	padding-top:0em;
	padding-bottom:0em;
	background-image: url('../imgs/div_bg.png');
}

p {
	margin-top: 1em;
	margin-bottom: 1em;
}

nav ul {
	list-style-type: none;
} nav ul li {
	display: inline;
	padding-left: 0.5em;
} nav a {
	text-decoration: none;
}

a {
	color: #DDDDCE;
}

a:hover {
	color: gray;
}

footer {
	width: 100%;
	text-align:center;
	clear:both;
	padding-bottom:0.25em;
	padding-top:0.25em;
}

header {
	width: 100%;
	clear:both;
	padding-bottom:0.25em;
	padding-top:0.25em;
}

textarea {
	background-color: #2B2B2B;
	color: #DDDDCE;
}

#wrapper {
	background-color: #222;
	opacity: .9;
	filter:Alpha(opacity=90); /*Opacity for IE*/
	margin-left: auto;
	margin-right: auto;
	padding-left: 1em;
	padding-right: 1em;
	min-width:46em;
	/*width: 75%;*/
	min-height: 25em;
}

.form-box-login {
	width:14.25em;
	height:auto;
	margin-right: auto;
	margin-left: auto;
	position:relative;
	text-align: center;
}

.form-box-wrapper-login {
	width:auto;
	height: auto;
	padding-top:5em;
}

.form-box-wrapper-register {
	width:auto;
	height: auto;
	padding-top:5em;
}

.form-box-register {
	width:16.5em;
	height:auto;
	margin-right: auto;
	margin-left: auto;
	position:relative;
	text-align: center;
}

#wrapper-register-patient {
	background-color: #222;
	opacity: .9;
	filter:Alpha(opacity=90); /*Opacity for IE*/
	margin-left: auto;
	margin-right: auto;
	padding-left: 1em;
	padding-right: 1em;
	min-width:46em;
	/*width: 75%;*/
	min-height: 16em;
}

.form-box-wrapper-register-patient {
	padding-top:2em;
	/*float:left;*/
	min-width:50%;
	margin-left:auto;
	margin-right:auto;
}

.form-box-register-patient {
	width:22em;
	min-height:26em;
	text-align: center;
	float:left;
}

.form-btn-register-patient {
	margin-top:1.5em;
	width:11em;
	height:2em;
}

.error-box-register-patient {
	min-width:20em;
	float:left;
	position: relative;
}

.clear-both {
	clear:both;
}

.center-div {
	position:relative;
	width:40.5em;
	margin-left: auto;
	margin-right:auto;
}

.form-btn {
	margin-top:1.5em;
	width:8em;
	height:2em;
}

.message-box {
	min-height: 6em;
}

.message {
	color: yellow;
	font-weight: bold;
	font-size: 0.80em;
}

.error {
	color: red;
	font-weight: bold;
	font-size: 0.80em;
}

.error-box {
	min-height:6em;
}

.col-width-fit-text {
	-moz-column-width: 30em;/*firefox*/
	column-width: 30em;/*IE10 & opera*/
	-webkit-column-span: 30em; /*chrome & safari*/
}

.indent1 {
	padding-left: 1em;
}

.list-no-bullets {
	list-style-type: none;
}

.triage {
	background: none;
	margin:auto;
}

#triage_highlight {
	color: red;
	font-size: 22px;
}

#triage_patient_from_db {
	padding-left: 5px;
}

#triage_submit {
	color: #DDDDCE;
	background-color: #2B2B2B;
	border: 1px solid #DDDDCE;
	width: 25%;
	height: 25px;
	font-size: 22px;
}

#triage_next {
	color: #DDDDCE;
	background-color: #2B2B2B;
	border: 1px solid #DDDDCE;
	padding-left: 5px;
	padding-right: 5px;
	height: 25px;
	font-size: 18px;
}

#triage_reset {
	float:right;
	color: #DDDDCE;
	background-color: #2B2B2B;
	border: 1px solid #DDDDCE;
	width: 25%;
	height: 25px;
	font-size: 22px;
}
